rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // -------------------------------------------------------------------------
    // HELPERS
    // -------------------------------------------------------------------------
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user is the owner of the document (by ID)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if the user has 'admin' role in their user document
    // NOTE: This costs 1 read operation per request
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // -------------------------------------------------------------------------
    // COLLECTIONS
    // -------------------------------------------------------------------------

    // Users Collection
    // - Owner: Read/Write own profile
    // - Admin: Read all profiles (for management)
    match /users/{userId} {
      allow create: if isAuthenticated(); // Allow user creation
      allow read: if isOwner(userId) || isAdmin();
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Vehicles Collection
    // - Owner: Read/Write own vehicles
    // - Admin: Read/Write ALL vehicles
    match /vehicles/{vehicleId} {
      allow create: if isAuthenticated(); // New vehicle creation
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin(); // Explicitly allow listing all for admin
    }

    // Fuel Entries Collection
    // - Owner: Read/Write own entries
    // - Admin: Read/Write ALL entries
    match /fuelEntries/{entryId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
    }
    
    // Test Collection (for connectivity check)
    match /test_connectivity/{docId} {
      allow read, write: if true; 
    }
  }
}
